<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    tools:context=".ui.activities.fragments.CustomerBottomSheet">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_2sdp"
            android:layout_gravity="center"
            android:background="#FFFFFF" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp">

            <ImageView
                android:id="@+id/crossIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="13dp"
                android:elevation="5dp"
                android:src="@drawable/crossccon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/etSearch"
                app:layout_constraintEnd_toEndOf="@+id/etSearch"
                app:layout_constraintTop_toTopOf="@+id/etSearch"
                app:layout_constraintVertical_bias="0.541" />

            <AutoCompleteTextView
                android:id="@+id/etSearch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search_view_bac"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="5dp"
                android:hint="Start Location"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/edt_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/crossForDes"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="12dp"
                android:elevation="5dp"
                android:src="@drawable/crossccon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/destinationSearch"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <AutoCompleteTextView
                android:id="@+id/destinationSearch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search_view_bac"
                android:drawableStart="@drawable/baseline_search_24"
                android:drawablePadding="5dp"

                android:hint="Destination Location "
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/edt_cursor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/crossPrice"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="12dp"
                android:elevation="5dp"
                android:src="@drawable/crossccon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/priceRageEdt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <AutoCompleteTextView
                android:id="@+id/priceRageEdt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search_view_bac"
                android:drawableStart="@drawable/baseline_attach_money_24"
                android:drawablePadding="5dp"
                android:hint="Price Range(PKR)"
                android:inputType="number"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/edt_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/commentCross"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="12dp"
                android:elevation="5dp"
                android:src="@drawable/crossccon"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/commentEdt"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.592" />

            <AutoCompleteTextView
                android:id="@+id/commentEdt"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@drawable/search_view_bac"
                android:drawableStart="@drawable/baseline_chat_24"
                android:drawablePadding="5dp"
                android:hint="Comment (Optional)"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color"
                android:textCursorDrawable="@drawable/edt_cursor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/findBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:backgroundTint="@color/backgroundColor"
            android:gravity="center"
            android:text="Find"
            android:textColor="@color/white"
            app:elevation="@dimen/_3sdp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pd"
        android:layout_width="wrap_content"
        android:elevation="@dimen/_6sdp"
        android:indeterminateTint="@color/widgetscolor"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>